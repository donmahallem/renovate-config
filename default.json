{
            "automerge": true,
            "dependencyDashboard": true,
            "extends": [
                "config:base",
                ":prHourlyLimit4"
            ],
            "lockFileMaintenance": {
                "enabled": true
            },
            "labels": [
                "dependencies"
            ],
            "prCreation": "immediate",
            "postUpdateOptions": [
                "npmDedupe"
            ],
            "separateMultipleMajor": true,
            "packageRules": [
                {
                    "groupName": "@donmahallem/turbo packages",
                    "matchPackageNames": [
                        "@donmahallem/turbo",
                        "@donmahallem/turbo-**"
                    ]
                },
                {
                    "groupName": "@typescript-eslint monorepo {{currentVersion}}",
                    "matchPackageNames": [
                        "@typescript-eslint/**"
                    ]
                },
                {
                    "groupName": "rollup packages {{currentVersion}}",
                    "matchPackagePatterns": [
                        "^@donmahallem/rollup-config$",
                        "^@rollup/plugin",
                        "^rollup$",
                        "^rollup-plugin-dts$"
                    ],
                    "matchPackagePrefixes": [
                        "@rollup/",
                        "@donmahallem/rollup-config"
                    ]
                },
                {
                    "groupName": "manniwatch monorepo {{currentVersion}}",
                    "matchPackageNames": [
                        "@manniwatch/**"
                    ]
                },
                {
                    "groupName": "nrwl monorepo {{currentVersion}}",
                    "matchPackageNames": [
                        "@nrwl/**",
                        "nx"
                    ]
                },
                {
                    "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
                    "automerge": true
               },
                {
                    "matchDepTypes": ["devDependencies"],
                    "automerge": true
               },
               {
                    "groupName": "octokit monorepo {{currentVersion}}",
                    "matchPackageNames": [
                        "@octokit/**"
                    ]
                },
                {
                    "groupName": "ajv {{currentVersion}}",
                    "matchPackageNames": [
                        "ajv",
                        "ajv-formats"
                    ],
                    "matchSourceUrlPrefixes": [
                        "https://github.com/ajv-validator",
                        "git+https://github.com/ajv-validator"
                    ]
                },
                {
                    "rangeStrategy": "pin",
                    "pin": {
                        "enabled": true
                    },
                    "matchDepTypes": [
                        "devDependencies"
                    ]
                },
                {
                    "rangeStrategy": "bump",
                    "matchDepTypes": [
                        "dependencies"
                    ]
                },
                {
                    "rangeStrategy": "replace",
                    "matchDepTypes": [
                        "peerDependencies",
                        "optionalDependencies"
                    ]
                },
                {
                    "matchPackageNames": [
                        "renovate"
                    ],
                    "extends": [
                        "schedule:weekly"
                    ]
                }
            ],
            "vulnerabilityAlerts": {
                "enabled": true,
                "labels": [
                    "security"
                ]
            }
        }
